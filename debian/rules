#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# include system information
include /usr/share/dpkg/architecture.mk

# set CROSS_COMPILE only when cross-compiling
ARCH=$(DEB_HOST_GNU_CPU)
CROSS_COMPILE=
ifneq ($(DEB_HOST_GNU_TYPE),$(DEB_BUILD_GNU_TYPE))
	CROSS_COMPILE=$(DEB_HOST_GNU_TYPE)-
endif

export DESTDIR=$(CURDIR)/debian/u-boot-imx6-sr

%:
	dh $@ --with quilt --parallel --sourcedirectory=u-boot

override_dh_auto_configure:
	make -C u-boot O=../build-emmc ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE) defconfig
	make -C u-boot O=../build-sdhc ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE) defconfig
	#make -C u-boot O=../build-sata ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE) defconfig
	make -C u-boot O=../build-spi ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE) defconfig

	cd build-emmc; ./source/scripts/kconfig/merge_config.sh ./source/configs/mx6cuboxi_defconfig ../config/01-emmc.conf ../config/10-version.conf
	cd build-sdhc; ./source/scripts/kconfig/merge_config.sh ./source/configs/mx6cuboxi_defconfig ../config/01-sdhc.conf ../config/10-version.conf
	#cd build-sata; ./source/scripts/kconfig/merge_config.sh ./source/configs/mx6cuboxi_defconfig ../config/01-sata.conf ../config/10-version.conf
	cd build-spi; ./source/scripts/kconfig/merge_config.sh ./source/configs/mx6cuboxi_defconfig ../config/01-spi.conf ../config/10-version.conf

override_dh_auto_build:
	dh_auto_build --builddirectory=build-emmc -- ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE)
	dh_auto_build --builddirectory=build-sdhc -- ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE)
	#dh_auto_build --builddirectory=build-sata -- ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE)
	dh_auto_build --builddirectory=build-spi -- ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE)

override_dh_auto_test:

override_dh_auto_install:
	cd build-emmc; install -v -D -m 0644 SPL $(DESTDIR)/boot/spl-cuboxi-emmc.bin
	cd build-emmc; install -v -D -m 0644 u-boot.img $(DESTDIR)/boot/u-boot-cuboxi-emmc.img
	cd build-sdhc; install -v -D -m 0644 SPL $(DESTDIR)/boot/spl-cuboxi-sdhc.bin
	cd build-sdhc; install -v -D -m 0644 u-boot.img $(DESTDIR)/boot/u-boot-cuboxi-sdhc.img
	#cd build-sata; install -v -D -m 0644 SPL $(DESTDIR)/boot/spl-cuboxi-sata.bin
	#cd build-sata; install -v -D -m 0644 u-boot.img $(DESTDIR)/boot/u-boot-cuboxi-sata.img
	cd build-spi; install -v -D -m 0644 SPL $(DESTDIR)/boot/spl-cuboxi-spi.bin
	cd build-spi; install -v -D -m 0644 u-boot.img $(DESTDIR)/boot/u-boot-cuboxi-spi.img

override_dh_auto_clean:
	rm -rf build-*
